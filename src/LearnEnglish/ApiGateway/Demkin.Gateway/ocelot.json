{
  "Routes": [
    {
      "UpstreamPathTemplate": "/System/User/LoginByAccountPassword",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "DownstreamPathTemplate": "/api/User/LoginByAccountPassword",
      "DownstreamScheme": "http",
      "LoadBalancerOption": {
        "Type": "RoundRobin"
      },
      "ServiceName": "System",
      "Prioirty": 1
    },
    {
      // Upstream 上游请求，客户端请求到API的请求
      "UpstreamPathTemplate": "/System/{url}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      // Downstream 下游请求，即转发的目标服务地址
      "DownstreamPathTemplate": "/api/{url}",
      "DownstreamScheme": "http",
      "LoadBalancerOption": {
        "Type": "RoundRobin"
      },
      "ServiceName": "System",
      "AuthenticationOptions": {
        "AllowedScopes": [],
        "AuthenticationProviderKey": "Demkin.Gateway"
      }
    },
    {
      // Upstream 上游请求，客户端请求到API的请求
      "UpstreamPathTemplate": "/Listen/{url}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "UseServicesDiscovery": false,

      // Downstream 下游请求，即转发的目标服务地址
      "DownstreamPathTemplate": "/api/{url}",
      "DownstreamScheme": "http",
      //"DownstreamHostAndPorts": [
      //  // 可以是多个负载均衡
      //  {
      //    "Host": "localhost",
      //    "Port": 8082
      //  }
      //],
      "ServiceName": "Listen",
      "LoadBalancerOption": {
        "Type": "RoundRobin"
      }
    },
    {
      // Upstream 上游请求，客户端请求到API的请求
      "UpstreamPathTemplate": "/Gateway/{url}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "UseServicesDiscovery": false,

      // Downstream 下游请求，即转发的目标服务地址
      "DownstreamPathTemplate": "/Hubs/{url}",
      "DownstreamScheme": "ws",
      "ServiceName": "Listen"
    },
    {
      // Upstream 上游请求，客户端请求到API的请求
      "UpstreamPathTemplate": "/FileOperation/{url}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "UseServicesDiscovery": false,

      // Downstream 下游请求，即转发的目标服务地址
      "DownstreamPathTemplate": "/api/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        // 可以是多个负载均衡
        {
          "Host": "192.168.0.175",
          "Port": 8083
        }
      ],
      "LoadBalancerOption": {
        "Type": "RoundRobin"
      }
    },
    {
      // Upstream 上游请求，客户端请求到API的请求
      "UpstreamPathTemplate": "/Transcode/{url}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "UseServicesDiscovery": false,

      // Downstream 下游请求，即转发的目标服务地址
      "DownstreamPathTemplate": "/api/{url}",
      "DownstreamScheme": "http",
      "ServiceName": "Transcode",
      "LoadBalancerOption": {
        "Type": "RoundRobin"
      }
    },
    {
      // Upstream 上游请求，客户端请求到API的请求
      "UpstreamPathTemplate": "/Search/{url}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "UseServicesDiscovery": false,

      // Downstream 下游请求，即转发的目标服务地址
      "DownstreamPathTemplate": "/api/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        // 可以是多个负载均衡
        {
          "Host": "localhost",
          "Port": 8085
        }
      ],
      "LoadBalancerOption": {
        "Type": "RoundRobin"
      }
    }
  ],
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Host": "192.168.0.175",
      "Port": 8500,
      "Type": "Consul",
      "PollingInterval": 100
    }
